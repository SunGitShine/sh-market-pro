<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.alwaysRun.sh_market.dao.GoodsInfoDao">

	<resultMap id="goodsInfo" type="com.alwaysRun.sh_market.bean.GoodsInfo">
		<id property="goodsId" column="goodsId" />
		<result property="userId" column="userId" />
		<result property="title" column="title" />
		<result property="price" column="price" />
		<result property="classify" column="classify" />
		<result property="publishTime" column="publishTime" />
		<result property="contacts" column="contacts" />
		<result property="phone" column="phone" />
		<result property="QQ" column="QQ" />
		<result property="describe" column="describe" />
		<result property="picture" column="picture" />
		<result property="status" column="status" />
		<result property="memo" column="memo" />
	</resultMap>

	<sql id="allColumn">
		`goodsId`,`title`,`price`,`price`,`classify`,`publishTime`,`contacts`,`phone`,
		`QQ`,`describe`,`picture`,`status`,`memo`
	</sql>

	<insert id="add" parameterType="GoodsInfo">
		INSERT INTO
		`goods_info`(`userId`,`title`,`price`,`classify`,`publishTime`,`contacts`,`phone`,`QQ`,`describe`,`picture`,`memo`)
		VALUES(#{userId},#{title},#{price},#{classify},now(),#{contacts},#{phone},#{QQ},#{describe},#{picture},#{memo})
		<selectKey resultType="java.lang.Integer" order="AFTER"
			keyProperty="id">
			SELECT LAST_INSERT_ID() AS id
		</selectKey>
	</insert>

	<update id="update" parameterType="GoodsInfo">
		UPDATE
		`goods_info` SET
		`title`
		= #{title},
		`price` = #{price},
		`classify` = #{classify},
		`contacts` =
		#{contacts},
		`phone` = #{phone},
		`QQ` = #{QQ},
		`describe` = #{describe},
		`publishTime`= now()
		WHERE
		`goodsId`=#{goodsId}
	</update>

	<update id="delete" parameterType="java.lang.Integer">
		UPDATE
		`goods_info` SET
		status =
		0
		WHERE
		goodsId=#{goodsId}
	</update>

	<select id="findById" resultMap="goodsInfo" parameterType="java.lang.Integer">
		SELECT
		<include refid="allColumn" />
		FROM `goods_info`
		WHERE
		goodsId=#{goodsId}
		AND
		status = 1
	</select>

	<select id="findByPage" resultMap="goodsInfo">
		SELECT
		<include refid="allColumn" />
		FROM `goods_info`
		WHERE
		status = 1
		<if test="userId != 0">
			AND userId=#{userId}
		</if>
		<if test="classify != null and classify != ''">
			AND classify=#{classify}
		</if>
		LIMIT #{pageNo}, #{pageSize}
	</select>

	<select id="findToTalNum" resultType="java.lang.Integer">
		SELECT
		COUNT(1)
		FROM `goods_info`
		WHERE
		status = 1
		<if test="userId != 0">
			AND userId=#{userId}
		</if>
		<if test="classify != null and classify != ''">
			AND classify=#{classify}
		</if>
	</select>

	<select id="findAll" resultMap="goodsInfo">
		SELECT
		t1.classify,t1.contacts,t1.`describe`,t1.goodsId,t1.phone,t1.picture,t1.price,t1.publishTime,t1.QQ,t1.`status`,t1.title,t2.nickname
		AS memo FROM goods_info AS t1 LEFT JOIN user_info AS t2 ON
		t1.userId=t2.userId
		WHERE t1.classify=#{classify}
		AND t1.`status` = 1
	</select>

</mapper>